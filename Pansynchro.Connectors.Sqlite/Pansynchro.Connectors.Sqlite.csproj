<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>net6.0;net6.0-windows;net7.0;net7.0-windows</TargetFrameworks>
	  <Nullable>enable</Nullable>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <AssemblyVersion>0.5.8</AssemblyVersion>
	  <FileVersion>0.5.8</FileVersion>
	  <Version>0.5.8</Version>
	  <Authors>Pansynchro Technologies</Authors>
	  <Product>Pansynchro Sqlite Connector</Product>
	  <Description>Pansynchro connector to read from or write to Sqlite databases.</Description>
	  <Copyright>Copyright 2022, Pansynchro Technologies</Copyright>
	  <PackageProjectUrl>https://github.com/Pansynchro-Technologies/Pansynchro</PackageProjectUrl>
	  <PackageTags>pansynchro;data;data-integration;etl;elt;sqlite</PackageTags>
	  <PackageReleaseNotes>Updating Sqlite analyzer.</PackageReleaseNotes>
	  <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<OutputPath>..\bin\</OutputPath>
	</PropertyGroup>
	
  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="6.0.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pansynchro.SQL\Pansynchro.SQL.csproj" />
  </ItemGroup>

</Project>
